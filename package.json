  "scripts": {
    "build": "turbo run build",
    "preview": "bun --filter=@repo/web preview",
    "dev": "turbo run dev --parallel",
    "dev:web": "turbo run dev --filter=@repo/web",
    "lint": "turbo run lint",
    "format": "prettier --write .",
    "check-types": "turbo run check-types",
    "check": "bun run format && turbo run lint && turbo run check-types",
    "db": "bun --filter=@repo/db run db",
    "ui:web": "bun --filter=@repo/web run ui",
    "d1:create": "bunx wrangler d1 create ravenna-kanban-db",
    "d1:migrate": "bunx wrangler d1 migrations apply ravenna-kanban-db --local",
    "d1:migrate:prod": "bunx wrangler d1 migrations apply ravenna-kanban-db --remote",
    "deploy": "bun run build && bunx wrangler deploy"
  },
  "devDependencies": {
    "@types/react-window": "^2.0.0",
    "prettier": "catalog:",
    "prettier-plugin-organize-imports": "catalog:",
    "prettier-plugin-tailwindcss": "catalog:",
    "turbo": "catalog:"
